// Triple.cpp : Этот файл содержит функцию "main". Здесь начинается и заканчивается выполнение программы.
//Пример перегрузки функций ( когда требуется от одной функции работа с несколькими типами аргуметов )

#include <iostream>
#include <string>
using namespace std;
int triple(int number); //объявляем функцию triple() для работы с целыми числами
string triple(string text); //объявляем функцию triple() для работы со строками
/*Важно что у объявленных функций одинаковые имена triple, но разные типы аргументов*/
int main()
{
    cout << "Trioling 5: " << triple(5)<< endl;
    cout << "tripling 'gamer': " << triple("gamer") << endl; 
    /*В результате мы можем вызвать одну функцию для работы в зависимости от вида задаваемого значения */
    return 0;
}
int triple(int number) { //определение функции triple() для работы с целыми числами
    return (number * 3);
}
string triple(string text) { //определение функции triple() для работы со строками
    return (text + text + text);
}

// Запуск программы: CTRL+F5 или меню "Отладка" > "Запуск без отладки"
// Отладка программы: F5 или меню "Отладка" > "Запустить отладку"

