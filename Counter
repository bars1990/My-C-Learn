// Counter.cpp : Этот файл содержит функцию "main". Здесь начинается и заканчивается выполнение программы.
//Применение цикла for

#include <iostream>
using namespace std;

int main()
{
    cout << "Counting forward:\n";
    for (int i = 0; i < 10; ++i) {
        cout << i << " ";
    }
    cout << "\n\nCounting backward: \n";
    for (int i = 9; i >= 0; --i) {
        cout << i << " ";
    }
    cout << "\n\nCounting by fives:\n";
    for (int i = 0; i <= 50; i += 5) {
        cout << i << " ";
    }
    cout << "\n\nCounting with null statmens: ";
    int count = 0;
    for (; count < 10; ) {
        cout << count << " ";
        ++count;
    }
    cout << "\n\nCounting with nested for loops:\n";
    const int ROWS = 5;
    const int COLUMS = 3;
    for (int i = 0; i < ROWS; ++i) {

        for (int j = 0; j < COLUMS; ++j) {
            cout << i << "." << j << " ";
        }
        cout << endl;
    }
    return 0;
}

// Запуск программы: CTRL+F5 или меню "Отладка" > "Запуск без отладки"
// Отладка программы: F5 или меню "Отладка" > "Запустить отладку"

