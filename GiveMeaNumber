// GiveMeaNumber.cpp : Этот файл содержит функцию "main". Здесь начинается и заканчивается выполнение программы.
//Программа демнострирует работу с глобальными константами

#include <iostream>
#include<string>
using namespace std;

int askNumber(int high, int low = 1); //объявляем функцию с заданными параметрами, при чем параметру low присваиваем значение по умолчанию 1
int main()
{
    int number = askNumber(5);//Присваиваем переменной значение функции, при этом задаем параметру high значени 5 а low оставляем по умолчанию (1)
    cout << "Thanks for entering: " << number << "\n\n";
    number = askNumber(10, 5);//Изменяем параметры функции: high 10 low 5
    cout << "Thanks for entering: " << number << "\n\n";
    return 0;
}
int askNumber(int high, int low ) { //Собственно сама функция
    int num;
    do {
        cout << "Please enter the number" << "(" << low << "-" << high << "): " << endl;
        cin >> num;
    } while (num > high || num < low);
    return num; //Возвращаем значение num  функции
}

// Запуск программы: CTRL+F5 или меню "Отладка" > "Запуск без отладки"
// Отладка программы: F5 или меню "Отладка" > "Запустить отладку"

