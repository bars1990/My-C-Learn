// Swap.cpp : Этот файл содержит функцию "main". Здесь начинается и заканчивается выполнение программы.
//Программа демонстрирует работу с ссылками для изменнения значений переменной

#include <iostream>
using namespace std;
void badSwap(int x, int y);//Функция с переменными
void goodSwap(int& x, int& y); //Функция с ссылками на переменные
int main()
{
    int myScore = 150; 
    int yourScore = 1000;
    cout << "Original values: \n"; //Оригинальные значения
    cout << "myScore: " << myScore << endl;
    cout << "yourScore: " << yourScore << endl;
    cout << "Calling badSwap(): \n"; //Результат работы функции с переменными 
    badSwap(myScore, yourScore); //Значения оригинальных переменных не поменялись
    /*Тк в параметры функции на самом деле передаются копии значений переменных*/
    cout << "myScore: " << myScore << endl;
    cout << "yourScore: " << yourScore << endl;
    cout << "Calling goodSwap(): " << endl;  // Результат работы функции с ссылками на переменные
    goodSwap(myScore, yourScore); //Значения оригинальных переменных изменились
    /*Благодаря тому что в параметрах ссылки на значения переменных можно изменить их оригинальное значение*/
    cout << "myScore: " << myScore << endl;
    cout << "yourScore: " << yourScore << endl;
    return 0;
}
void badSwap(int x, int y) {
    int temp = x;
    x = y;
    y = temp;
    }
void goodSwap(int& x, int& y) {
    int temp = x;
    x = y;
    y = temp;
}
// Запуск программы: CTRL+F5 или меню "Отладка" > "Запуск без отладки"
// Отладка программы: F5 или меню "Отладка" > "Запустить отладку"

