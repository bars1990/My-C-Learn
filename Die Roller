// Die Roller.cpp : Этот файл содержит функцию "main". Здесь начинается и заканчивается выполнение программы.
//Генератор случайных чисел

#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;

int main()
{
    srand(static_cast<unsigned int>(time(0))); //случайность генерации зависит от даты и времени пк
    //Запускаем генератор случайных чисел
    int randomNumber = rand(); //генерация случайного числа функцией rand(); из библиотеки cstlib
    int die = (randomNumber % 6) + 1; //остаток по модулю будет в диапозоне от 1-5, т.к. нам нужно от 1 до 6 мы +1
    cout << "You rolled a " << die << endl;
    return 0;
}

// Запуск программы: CTRL+F5 или меню "Отладка" > "Запуск без отладки"
// Отладка программы: F5 или меню "Отладка" > "Запустить отладку"

