//Программа Угадай Число демонстрирует работу с if

#include <iostream>
using namespace std;

int main()
{
    int score;
    cout << "Enter your score: ";
    cin >> score;
    if (score >= 250) {
        cout << "You scored 250 or more. Decent.\n\n";
    }
    else if (score >= 500) {
        cout << "Youre scored 500 or more. Nice.\n\n";
    }
    else if (score >= 1000) {
        cout << "You scored 1000 or more. Impressive!\n";
    }

    return 0;
}

