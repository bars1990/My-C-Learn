// Scoping.cpp : Этот файл содержит функцию "main". Здесь начинается и заканчивается выполнение программы.
//Пример работы с инкапсуляцией и областями видимости переменной

#include <iostream>
using namespace std;
void func();

int main()
{
	int var = 5; //Локальная переменная в функции main()
	cout << "In main() var is: " << var << endl;
	func();// Вызоы функции func() для того что бы получить значение переменной var из нее.
	cout << "Back in main() var is: " << var << endl;
	{ /*Здесь фигурными скобками задается новая область видимости*/
		cout << "In main() in a new scope var is: " << var << endl;
		cout << "Creating new var in new scope.\n";
		int var = 10;// значение переменной скрывает значение var из функции main()
		cout << "In main() a new scope is: " << var << endl;
	}
	cout << "At end of main() created in new scope no longer exists." << endl;
	cout << "At end of main() var is: " << var << endl;
	return 0;
}
void func() {
	int var = -5;
	cout << "In func() var is: " << var << endl;
}

// Запуск программы: CTRL+F5 или меню "Отладка" > "Запуск без отладки"
// Отладка программы: F5 или меню "Отладка" > "Запустить отладку"

