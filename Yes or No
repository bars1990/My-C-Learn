// YesOrNo.cpp : Этот файл содержит функцию "main". Здесь начинается и заканчивается выполнение программы.
//Демонтрация абстрагирования функций и работы с возвращаемыми значениями

#include <iostream>
#include <string>
using namespace std;

char askYesNo1(); //объявлении функции
char askYesNo2(string question); // объявление функции с указанием возвращаемого типа переменной
int main()
{
    char answer1 = askYesNo1(); //присваивание переменной возвращаемого значения функции
    cout << "Thanks for answering: " << answer1 << "\n\n"; 
    char answer2 = askYesNo2("Do you wish to save your game?"); // присваивание переменной возвращаемого значения функции с объявлением значения строковой переменной question
    cout << "Thanks for anwsering: " << answer2 << endl;
    return 0;
}
char askYesNo1() { //тело функции
    char response1;
    do {
        cout << "Please enter 'y' or 'n': ";
        cin >> response1;
    } while (response1 != 'y' && response1 != 'n');
    return response1; //возвращения значения переменной response1 функции. Это значение будет присвоено переменной answer1 функции main()
}
char askYesNo2(string question) { //тело функции
    char response2;
    do {
        cout << question << "(y/n): "; //вывод на экран значения переменной question. Значение переменной question  объявлено в переменной answer2 функции main()
        cin >> response2;
    } while (response2 != 'y' && response2 != 'n');
    return response2; //Возвращение значения переменной response2 функции. Это значение будет присвоено переменной answer2 функции main()
}
        

// Запуск программы: CTRL+F5 или меню "Отладка" > "Запуск без отладки"
// Отладка программы: F5 или меню "Отладка" > "Запустить отладку"

